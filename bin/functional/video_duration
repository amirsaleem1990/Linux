#!/bin/bash

DEL -rf /home/amir/.duration

IFS=$'\n'
get_size_(){
	echo -n `du -sh $1  | sed 's/\t/ /g' | cut -d' ' -f1`
}

get_duration(){
	echo -n `ffmpeg -i $1  2>&1 | grep Duration | cut -d " " -f 4 | sed s/,// `
}
original_IFS=$IFS
my_array=(.mp4 .mkv .webm .mov .mp4.part .mkv.part .webm.part .mov.part)

# echo -e 'Sory by: \n1- for by size\n2- by duration\n\t'
# read  ans

func_(){
	extention=$(echo .`echo $1 | rev | cut -d. -f1 | rev`)
	# echo $extention
	if [[ "${my_array[@]}" =~ "${extention}" ]]; then
		duration=`get_duration $1`
		if [[ $duration != "" ]] ; then
			echo $duration >> /home/amir/.duration
		# if [[ $? -eq  0 ]] ; then
			get_size_ $1
			echo -en "\t"
			echo -n $duration
		else
			return 0
		fi
		echo -en "\t"
		echo -e "\t$1"
	fi
}

if [[ $@ == "" ]]; then
	count=`ls | grep ".mp4$\|.mkv$\|.webm$\|.mov$\|.mp4.part$\|.mkv.part$\|.webm.part$\|.mov.part$" | wc -l`
	if [[ $count -gt 0 ]] ; then 
		for i in `ls | grep ".mp4$\|.mkv$\|.webm$\|.mov$\|.mp4.part$\|.mkv.part$\|.webm.part$\|.mov.part$"`; do
			func_ $i
		done | sort -h
	fi
else
	IFS=$'\n'
	if [[ "$@" == "2" ]]; then
		for i in $(find . -name "*.mp4" -o -name "*.mkv" -o -name "*.webm" -o -name "*.mov"); do
			func_ $i
		done | sort -h
	else
		for i in "$@"; do
			func_ $i
		done | sort -h 
	fi
fi





