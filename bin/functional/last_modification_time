#!/bin/bash
IFS=$'\n'
echo 
echo -e  "
=========,===========,==================================\n
Total_SEC,DD:HH:MM:SS,File Name\n
=========,===========,==================================" >~/.sb1

func(){
	SEC=$(( `date +%s` - `stat -c %Y "$1"` ))
	# x=`eval "echo $(date -ud "@$SEC" +'$((%s/3600/24)) D,%H H,%M M,%S S')"`
	x=`eval "echo $(date -ud "@$SEC" +'$((%s/3600/24)):%H:%M:%S')"`
	if [[ $(echo $x | grep '^[0-9]\:' | wc -l) -gt 0 ]]; then
		x=0$x
	fi
	echo "$SEC,$x,$1"
}

if [ $# -eq 0 ]; then
	for file in `ls -a | sed 's/@$//g; s/*$//g'`; do
		func $file
	done | sort -nr >>  ~/.sb1
else
	for file in `ls "$@" | sed 's/@$//g; s/*$//g'`; do
		func $file
	done | sort -nr >>  ~/.sb1
fi


echo -e  "
=========,===========,==================================\n
Total_SEC,DD:HH:MM:SS,File Name\n
=========,===========,==================================" >>~/.sb1
cat ~/.sb1 | column -t -s, | sed 's/^/     /' | grep --color=auto '\|=\|Total_SEC\|DD:HH:MM:SS\|File Name' 
echo