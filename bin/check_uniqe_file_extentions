#!/bin/bash
IFS=$'\n'
echo -e "\n"

echo "`ls -d */ | wc -l` ----Folders----"

echo -e "\n"

ls -p |\
	grep -v /  |\
	grep '\.' |\
	rev |\
	cut -d. -f1 |\
	rev |\
	sort |\
	uniq -c |\
	sed 's/\ \{2,\}//g'


