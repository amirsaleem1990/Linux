#!/usr/bin/python3
import requests
import os
from bs4 import BeautifulSoup
import sys

ans = input("1-Copy new urls into /home/amir/.GMP\n2-Use existing /home/amir/.GMP\n3-paste urls on cammand line\n(press 1,2 or 3)\n")
print("\n\n")
if ans == "1":
	try:
		os.system("rm -f /home/amir/.GMP")
	except:
		pass
	os.popen("subl /home/amir/.GMP")
	input("save /home/amir/.GMP and then press any key to proceed: ")
	urls = open("/home/amir/.GMP", 'r').read().splitlines()
elif ans == "2":
	urls = open("/home/amir/.GMP", 'r').read().splitlines()
else:
	urls = []
	while True:
		input_ = input("Paste you URL please [Enter q for stop]: ")
		if input_ == "q":
			break
		urls.append(input_)


links = []
for url in urls:
	soup = BeautifulSoup(requests.get(url).text, "lxml")
	for i in soup.select("a"):
	    try:
	        l = i['href']
	        if l.startswith("/url?q="):
	            m = l.strip("/url?q=")
	            # links.append("firefox " + m)
	            links.append("/usr/bin/google-chrome-stable " + m)
	    except:
	        pass
L = []
for i in links:
	print(f"url: {i}")
	web = i.replace("https://" , "").replace("http://" , "").replace("/usr/bin/google-chrome-stable ", "").split("/")[0]
	print(f"Actual web: {web}\n\n")
	L.append("/usr/bin/google-chrome-stable " + web if web.startswith("www.") else "www." + web)

links = list(set(L))
for L in links:
	# print(L)
	os.popen(L)