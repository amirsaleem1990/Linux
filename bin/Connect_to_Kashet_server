#!/bin/bash

if [[ `naclient status | wc -l` = 1 ]] ; then
	echo -e "\n****** Connecting to VPN *******\n\n"
	
	/opt/sslvpn-plus/naclient/gui/naclient.sh >/dev/null
	if [[ $? = 0 ]] ; then
		echo "Connected to VPN Successfully"
	else
		echo "Sorry, Not Connected to VPN Successfully"
	fi
fi

echo -e "\n****** Connecting to Kashat-server *******\n\n"
ssh 192.168.62.12

