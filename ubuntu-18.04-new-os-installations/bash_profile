declare -f calculator
calculator(){
    expression=$1
    if [[ -z $expression ]]; then
        read -p "Enter you expression: " expression
    fi
    x=$(bc <<< "scale=4; $expression")
    if [[ "${x:0:1}" == "." ]]; then
        echo 0$x
    else
        echo $x
    fi
}

declare -f calculator_while_loop
calculator_while_loop(){
    while :; do
        echo ''
        read -p "Enter you expression: " expression
        calculator "$expression"
    done
}

